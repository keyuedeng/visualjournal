generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id  // Clerk user ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entries Entry[]
  nodes Node[]
}

model Entry {
  id        String     @id @default(cuid())
  title     String     @db.VarChar(255)
  body      String     @db.Text
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    String
  insights  Insight[]
  user User @relation(fields: [userId], references: [id])
}

model Insight {
  id         String   @id @default(cuid())
  entryId    String
  topics     String[]
  sentiment  Float
  chunkIndex Int
  createdAt  DateTime @default(now())

  entry Entry @relation(fields: [entryId], references: [id])
}

model TopicAlias {
  id              String   @id @default(cuid())
  topic           String
  embedding       Float[]
  canonicalNodeId String?
  createdAt       DateTime @default(now())

  node Node? @relation(fields: [canonicalNodeId], references: [id])
}

model Node {
  id        String   @id @default(cuid())
  userId    String
  label     String
  categories  String[] @default([])
  count     Int      @default(1)
  embedding Float[]
  contexts  Json[]
  llmSummary String? @db.Text
  bulletPoints String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  topicAliases TopicAlias[]

  outgoingEdges Edge[] @relation("EdgeSource")
  incomingEdges Edge[] @relation("EdgeTarget")
  user User @relation(fields: [userId], references: [id])
}

model Edge {
    id String @id @default(cuid())

    sourceId String
    targetId String

    weight Int @default(1)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    source Node @relation("EdgeSource", fields: [sourceId], references: [id])
    target Node @relation("EdgeTarget", fields: [targetId], references: [id])

    @@index([sourceId])
    @@index([targetId])
    @@unique([sourceId, targetId]) // prevents duplicate edges
}
